{
  "name": "BetterMediaKeys", 
  "version": "1.0.0.2",
  "description": "A browser extension that rebinds the previous/next track key to allow chapter navigation on YouTube.",
  "action": {},
  "manifest_version": 3,
   "content_scripts": [
    {
    "run_at": "document_idle",
    "matches": ["https://*.youtube.com/*"],
    "exclude_matches": ["https://music.youtube.com/*"],
    "js": ["main.js"]
    }
   ],
   "web_accessible_resources": [{ 
    "resources": ["mediaKeys.js"],
    "matches": ["https://*.youtube.com/*"],
    "exclude_matches": ["https://music.youtube.com/*"]
  }],
   "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}